<%= form_for(@todo, remote: true, html: { id: 'todo_form'} ) do |f| %>
  <% if @todo.errors.any? %>
    <div id="error_explanation">
      <h2><%= @todos.errors.count %>つの入力</h2>

      <ul>
      <% @todo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :due %><br>
    <%= f.date_select :due %>
  </div>
  <div class="field">
    <%= f.label :user %><br>
    <%= f.select :user_id, User.all.map{|u| [u.name, u.id]}%>
  </div>
  <div class="field">
    <%= f.label :task %><br>
    <%= f.text_field :task %>
  </div>
  <div class="field">
    <%= f.label :memo %><br>
    <%= f.text_area :memo %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
